<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/poker_table_bg">

    <!-- Logo arriba -->
    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/poker_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- RecyclerView de cartas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cardsList"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/logo"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:clipToPadding="false"/>

    <!-- Botones -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardsList"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/addCardBtn"
            android:text="Agregar Carta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_chip"/>

        <Button
            android:id="@+id/btnResolve"
            android:text="Resolver Mano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@drawable/button_chip"/>
    </LinearLayout>

    <!-- Resultado -->
    <TextView
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:layout_below="@id/btnResolve"
        android:text="Resultado..."
        android:textStyle="bold"
        android:gravity="center"/>
</RelativeLayout>
